<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <TextView
        android:text="This would be the question"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="200dp" />

    <RelativeLayout
        android:id="@+id/yesNo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:padding="16dp">

        <Button
            android:id="@+id/yesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:gravity="center"
            android:layout_below="@+id/yesButton"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/yesCheck"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/border_circle"
            android:paddingRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/yesButton"
            android:layout_marginTop="5dp"/>
        
        <ImageView
            android:id="@+id/noCheck"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/border_circle"
            android:paddingRight="16dp"
            android:layout_marginTop="55dp"
            android:layout_toStartOf="@id/noButton"/>

    </RelativeLayout>







