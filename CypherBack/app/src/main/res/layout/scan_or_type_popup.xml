<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ArcelorMittalTan">

    <Button
        android:text="Scan Barcode"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/scan_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:onClick="camera_scan" />

    <Button
        android:text="Type Barcode"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/type_btn"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/scan_btn"
        android:layout_alignStart="@+id/scan_btn"
        android:onClick="type_barcode" />

</RelativeLayout>